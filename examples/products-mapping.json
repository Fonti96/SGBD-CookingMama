{
  "settings": {
    "analysis": {
      "analyzer": {
        "multi_lang": {
          "type": "standard",
          "stopwords": ["_spanish_", "_english_"]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "name":        { "type": "text", "analyzer": "multi_lang" },
      "description": { "type": "text", "analyzer": "multi_lang" },
      "tags":        { "type": "keyword" },
      "brand":       { "type": "keyword" },
      "price":       { "type": "float" },
      "createdAt":   { "type": "date" }
    }
  }
}
